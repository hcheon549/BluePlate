<div>
  <div><strong>Date:</strong> <%= @date %></div>
  <div><strong>Menu:</strong> <%= @meal[:name] %></div>
  <div><strong>Meal:</strong> <%= @order_type %></div>
  <div><strong>Description:</strong> <%= @meal[:description] %></div>
  <div><strong>Total Number of Orders:</strong> <%= @reservations.length %></div>
  <br/>
  <div>
    <% @orders_summary.each do |time| %>
      <% unless time[:orders].empty? %>
      <strong><%= time[:start] %> - <%= time[:end] %> (<%= time[:orders].length %>)</strong><br/>
        <% time[:orders].each do | order | %>
        <%= order.keys.first %> - <%= order[order.keys.first][:fname] %> <%= order[order.keys.first][:lname] %><br/>
        <% end %>
        <br/>
      <% end %>
    <% end %>
  </div>
</div>